@model WebApp.Models.Bug

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center pageTitle">@Model.BugName</h2>
<p class="text-center">Delete</p>
<div>
    <hr />
    <h2 class="text-center deleteConfirmation"><b>Are you sure you want to delete this bug?</b></h2>
    <dl class="dl-horizontal">
        <dt class="toprow">
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>

        <dd class="toprow hidden-xs">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

        <dd class="hidden-lg hidden-md hidden-sm">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BugName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BugName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BugDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BugDescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", new { id = Model.Project.ProjectName }, htmlAttributes: new { @class = "pull-right" })
        </div>
    }
</div>
