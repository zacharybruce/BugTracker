@model WebApp.Models.Bug

@{
    ViewBag.Title = "Details";
}

<h2>@Model.BugName</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Project Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>

        <dt>
            Bug Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BugName)
        </dd>

        <dt>
            Priority
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BugDescription)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Bugs", "Projects", new { id = Model.ProjectID }, null)
</p>
