@model WebApp.Models.Project

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center pageTitle">@Model.ProjectName</h2>
<p class="text-center">Delete</p>
<div>
    <hr />
    <h3 class="text-center" style="margin-bottom: 20px">Are you sure you want to delete this project?</h3>
    <dl class="dl-horizontal">
        <dt class="toprow">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>

        <dd class="toprow">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "pull-right" })
        </div>
    }
</div>
