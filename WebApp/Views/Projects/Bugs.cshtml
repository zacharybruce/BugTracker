@model IEnumerable<WebApp.Models.Bug>

@{
    ViewBag.Title = "Bugs";
}

<h1 class="text-center pageTitle">@Url.RequestContext.RouteData.Values["id"]</h1>

<p class="text-center">
    @Html.ActionLink("Add Bug", "Create", "Bugs", new { id = Url.RequestContext.RouteData.Values["id"] }, null)
</p>
<table class="table">
    <tr>
        @*<th class="listHeader">
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </th>*@
        <th class="listHeader">
            @Html.DisplayNameFor(model => model.BugName)
        </th>
        <th class="listHeader">
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th class="listHeader" style="border-right:solid">
            @Html.DisplayNameFor(model => model.BugDescription)
        </th>
        <th class="listHeader"> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td class="listBody" style="padding:47px 0px">
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>*@
            <td class="listBody">
                @Html.DisplayFor(modelItem => item.BugName)
            </td>
            <td class="listBody">
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td class="listBody">
                @Html.DisplayFor(modelItem => item.BugDescription)
            </td>
            <td class="listBody">
                @Html.ActionLink("Edit", "Edit", "Bugs", new { id = item.ID }, null) |
                @Html.ActionLink("Details", "Details", "Bugs", new { id = item.ID }, null) |
                @Html.ActionLink("Delete", "Delete", "Bugs", new { id = item.ID }, null)
            </td>
        </tr>
    }

</table>

